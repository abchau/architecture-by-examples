package com.abchau.historia.subscribe.infrastructure.event;

import java.util.Map;
import java.util.concurrent.BlockingQueue;
import java.util.concurrent.ConcurrentHashMap;
import java.util.concurrent.LinkedBlockingQueue;

import org.springframework.context.annotation.Profile;
import org.springframework.stereotype.Component;

@Component
public class InMemoryEventStore {

    private Map<String, BlockingQueue> stores;
	
	public InMemoryEventStore() {
		this.stores = new ConcurrentHashMap<>();
	}	

	public void send(final String topic, final Object object) {
		stores.putIfAbsent(topic, new LinkedBlockingQueue<>());
		stores.get(topic).add(object);
	}

}
